<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F8FB"
    android:clipToPadding="false"
    android:paddingBottom="96dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 醫院介紹 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="醫院介紹"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- 醫院介紹卡片 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rounded_card"
            android:padding="12dp">

            <TextView
                android:id="@+id/textHospitalIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="這裡是醫院介紹的內容，可以放醫院的歷史、服務特色、主要科別等簡介。"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:text="more..."
                android:textColor="#757575"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- 樓層介紹 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="樓層介紹"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <!-- AB / C 廳切換按鈕（藍色系 selector） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnAB"
                style="@style/HallButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB廳總樓層"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_blue_selector"
                android:backgroundTint="@null" />
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnC"
                style="@style/HallButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C廳總樓層"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/btn_blue_selector"
                android:backgroundTint="@null" />
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- 樓層按鈕群（Flexbox 自動換行 + 置中） -->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:flexWrap="wrap"
            app:justifyContent="center">

            <Button style="@style/FloorButtonStyle" android:text="B1" />
            <Button style="@style/FloorButtonStyle" android:text="1F" />
            <Button style="@style/FloorButtonStyle" android:text="2F" />
            <Button style="@style/FloorButtonStyle" android:text="3F" />
            <Button style="@style/FloorButtonStyle" android:text="5F" />
            <Button style="@style/FloorButtonStyle" android:text="6F" />
            <Button style="@style/FloorButtonStyle" android:text="7F" />
            <Button style="@style/FloorButtonStyle" android:text="8F" />
            <Button style="@style/FloorButtonStyle" android:text="9F" />
            <Button style="@style/FloorButtonStyle" android:text="10F" />
            <Button style="@style/FloorButtonStyle" android:text="11F" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
