<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 白底 -->
    <solid android:color="#FFFFFF" />

    <!-- 灰色邊框 -->
    <stroke
        android:width="2dp"
        android:color="#757575" />

    <!-- 圓角 -->
    <corners android:radius="20dp" />

    <!-- 內距避免文字太貼邊 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
